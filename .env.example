# Neon PostgreSQL connection string (required)
DATABASE_URL=postgresql://user:pass@host/db?sslmode=require

# Minimum log level (debug, info, warn, error) (optional)
LOG_LEVEL=info

# NextAuth secret (generate with: openssl rand -hex 32) (required)
AUTH_SECRET=

# App URL for auth callbacks (required)
NEXTAUTH_URL=https://yourapp.vercel.app

# Resend API key for transactional emails (required)
RESEND_API_KEY=re_...

# Sender email address (optional)
EMAIL_FROM=App <noreply@example.com>

# Stripe secret key (required)
STRIPE_SECRET_KEY=sk_live_...

# Stripe publishable key (NEXT_PUBLIC_) (required)
STRIPE_PUBLISHABLE_KEY=pk_live_...

# Stripe webhook signing secret (required)
STRIPE_WEBHOOK_SECRET=whsec_...
